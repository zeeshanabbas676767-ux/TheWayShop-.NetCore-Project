@model IEnumerable<NewCoreProject.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <h1 class="user-name" style="text-align:center">Users</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

<div class="container-fluid" style="overflow:auto;max-height:300px;">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admin_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
                        <td class="gap-1" style="display:flex">
                            <a asp-action="Edit" asp-route-id="@item.Admin_Id" class="btn btn-success"title="Edit"><i class="fa fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Admin_Id" class="btn btn-info" title="Details"><i class="fa fa-file-alt"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Admin_Id" class="btn btn-danger" title="Delete"><i class="fa fa-trash"></i></a>
                        </td>
        </tr>
}
    </tbody>
</table>
</div>