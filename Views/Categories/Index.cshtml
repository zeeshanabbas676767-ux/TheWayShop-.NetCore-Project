@model IEnumerable<NewCoreProject.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h1 class="user-name" style="text-align:center">Category</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="container-fluid" style="overflow:auto;max-height:300px;">
        <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
                    <td class="gap-1" style="display:flex">
                            <a asp-action="Edit" asp-route-id="@item.Category_Id" class="btn btn-success" title="Edit"><i class="fa fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Category_Id" class="btn btn-info" title="Details"><i class="fa fa-file-alt"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Category_Id" class="btn btn-danger" title="Delete"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>