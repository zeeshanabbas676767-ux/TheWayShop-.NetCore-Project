@model NewCoreProject.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid" style="overflow:auto;">

    <div>
        <h1 class="text-center">Product</h1>
        <hr />
        <h3 style="color:red">Are you sure you want to delete this?</h3>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product_PurchasePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_PurchasePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product_SalePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product_SalePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Picture)
        </dt>
        <dd class = "col-sm-10">
                <img src="@Url.Content(Model.Product_Picture)" alt="Product Image" style="width: 100px; height: 100px;" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Category_Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Product_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
           <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
</div>
